<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.dion.onpoint">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".StartPage"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="adjustResize|stateHidden|adjustPan">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".SearchPage"
            android:screenOrientation="portrait" />
        <activity
            android:name=".Definition"
            android:screenOrientation="portrait" />
        <activity
            android:name=".quotes"
            android:screenOrientation="portrait" />
        <activity
            android:name=".wikipedia"
            android:screenOrientation="portrait" />
        <activity
            android:name=".quora"
            android:screenOrientation="portrait" />
        <activity
            android:name=".reuters"
            android:screenOrientation="portrait" />
        <activity
            android:name=".youtube"
            android:screenOrientation="portrait" />
        <activity
            android:name=".hindu"
            android:screenOrientation="portrait" />
        <activity
            android:name=".notepad"
            android:label="@string/title_activity_notepad"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".DefinitionFinal"
            android:label="@string/title_activity_definition_final" />
        <activity android:name=".note" />
        <activity
            android:name=".QuoteFinal"
            android:label="@string/title_activity_quote_final"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".hinduFinal"
            android:label="@string/title_activity_hindu_final"
            android:theme="@style/AppTheme"></activity>
    </application>

</manifest>
